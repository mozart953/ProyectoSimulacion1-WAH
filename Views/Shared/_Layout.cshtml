<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Simulacion 1</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link type="text/css" href="~/Content/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-secondary" style="background-color: #e3f2fd;">
        <div class="container-fluid">
            <div class="navbar-nav">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Proyecto final", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
         
            <div class="navbar-collapse" id="navbarText">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="navbar-brand">
                        <a class="nav-link" href=" @Url.Action("Index", "Home")">Inicio&nbsp&nbsp</a>
                       
                    </li>
                    <li class="navbar-brand">
                        <a class="nav-link" href=" @Url.Action("About", "Home")">Acerca de&nbsp&nbsp</a>
                    </li>
                    <li class="navbar-brand">
                        <a class="nav-link" href=" @Url.Action("Contact", "Home")">Contacto&nbsp&nbsp</a>
                    </li>
                    <li class="navbar-brand">
                        <a class="nav-link" href=" @Url.Action("Index", "PRODUCTOS")">Productos&nbsp&nbsp</a>
                    </li>
                </ul>
                <span class="navbar-text">
                    SIMULACION 1
                </span>
            </div>
        </div>
    </nav>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Proyecto final-simulacion1</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap.js")
    @RenderSection("scripts", required: false)
</body>
</html>
