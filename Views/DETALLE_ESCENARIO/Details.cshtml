@model  List<ProyectoSimulacion1.Models.DETALLE_HORA>

@{
    ViewBag.Title = "Details";
}

<div style="padding: 8px;" class="text-center">
    <a type="btn" href=" @Url.Action("Index")" class="btn btn-primary col-5">Regresar&nbsp&nbsp</a>
</div>

<div class="text-center"><h2>Detalle Hora</h2></div>

<div class="row" style="margin-top:20px">
    <div class="col"></div>
    <div class="col-6">
        <table class="table table-dark table-striped text-center">
            <tr>
                <th scope="col">
                    CLIENTE
                </th>
                <th scope="col">
                    PRODUCTOS
                </th>
                <th scope="col">
                    GASTO
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CORRELATIVO_CLIENTE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CANTIDAD_PRODUCTOS)
                    </td>
                    <td>
                        Q. @Html.DisplayFor(modelItem => item.TOTAL_VENTA)
                    </td>
                    <td>
                        <a type="btn" href=" @Url.Action("Detalle2",new { id = item.COD_DETALLE_HORA } )" class="btn btn-success">Detalles&nbsp&nbsp</a>
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col"></div>
</div>


